  "scripts": {
    "start": "next start -p 2222",
    "dev": "npm run dev:full",
    "dev:full": "sh -c 'npm run dev:cleanup && sleep 2 && concurrently --kill-others --success=first --names \"rpc,sol,prices,next\" \"npm run rpc:dev\" \"npm run sol:dev\" \"npm run prices:keep-fresh\" \"sh -c \\\"sleep 8 && next dev -p 2222\\\"\"'",
    "prices:keep-fresh": "sh -c 'sleep 15 && ./scripts/keep-prices-fresh.sh'",
    "rpc:dev": "sh -c 'npm run rpc:start & sleep 6 && npm run rpc:deploy && tail -f /dev/null'",
    "dev:cleanup": "sh -c 'echo \"ðŸ§¹ Cleaning up processes and ports...\"; pkill -9 -f \"hardhat node\" 2>/dev/null || true; pkill -9 -f anvil 2>/dev/null || true; pkill -9 -f \"solana-test-validator\" 2>/dev/null || true; pkill -9 -f \"next dev\" 2>/dev/null || true; lsof -t -i:8545 | xargs kill -9 2>/dev/null || true; lsof -t -i:2222 | xargs kill -9 2>/dev/null || true; lsof -t -i:8899 | xargs kill -9 2>/dev/null || true; echo \"âœ… Cleanup complete\"'",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "dev:with-db": "npm run predev && npm run db:push && npm run dev:full",
    "agent": "./start-agent.sh",
    "rpc:start": "./scripts/start-hardhat.sh",
    "rpc:deploy": "cd contracts && npm run deploy:eliza",
    "rpc:check": "node scripts/check-rpc.js",
    "rpc:diagnose": "./scripts/diagnose-hardhat.sh",
    "predev": "node scripts/check-rpc.js || true && node scripts/check-postgres.cjs || true",
    "help:metamask": "./scripts/verify-metamask.sh",
    "build": "next build",
    "build:next-only": "next build",
    "lint": "prettier --write ./src",
    "test": "vitest run tests/runtime-e2e.test.ts tests/full-stack-integration.test.ts tests/database-integration.test.ts",
    "test:integration": "vitest run tests/full-stack-integration.test.ts",
    "test:all": "vitest run tests/**/*.test.ts",
    "test:multi-approver": "cd contracts && npx hardhat test test/MultiApprover.ts",
    "test:oracle": "cd contracts && npx hardhat test test/OracleScenarios.ts",
    "test:contracts": "cd contracts && npx hardhat test",
    "test:everything": "./scripts/test-everything.sh",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "cypress run --spec \"cypress/e2e/eliza-otc-e2e.cy.ts\"",
    "test:e2e:open": "cypress open",
    "test:e2e:full": "cd contracts && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "eliza:start": "./scripts/start-eliza-system.sh",
    "eliza:stop": "./scripts/stop-eliza-system.sh",
    "eliza:deploy": "cd contracts && npm run deploy:eliza",
    "eliza:test": "cd contracts && npm run test:e2e",
    "worker:start": "node -e \"require('./src/services/quoteApprovalWorker').startQuoteApprovalWorker()\"",
    "sol:validator": "sh -c 'echo \"â›“ï¸  Starting Solana test validator (logs in solana.log)...\"; cd solana/otc-program && pkill -9 -f solana-test-validator 2>/dev/null || true; sleep 1; rm -rf test-ledger/lock 2>/dev/null || true; solana-test-validator --log > ../../solana.log 2>&1'",
    "sol:deploy": "sh -c 'cd solana/otc-program && npm run build && solana airdrop 25 ./id.json --url http://127.0.0.1:8899 && anchor deploy && solana airdrop 2 DScqtGwFoDTme2Rzdjpdb2w7CtuKc6Z8KF7hMhbx8ugQ --url http://127.0.0.1:8899 && echo \"âœ… Airdropped 2 SOL to Phantom wallet\"'",
    "sol:dev": "concurrently --raw --success=first --kill-others \"npm run sol:validator\" \"sh -c 'sleep 8 && npm run sol:deploy && tail -f /dev/null'\""
