    "test:e2e:report": "playwright show-report",
    "test:e2e:single": "playwright test",
    "test:e2e:pages": "playwright test e2e/01-pages.spec.ts",
    "test:e2e:wallet": "playwright test e2e/02-evm-wallet.spec.ts e2e/03-solana-wallet.spec.ts",
    "test:e2e:flows": "playwright test e2e/04-complete-flows.spec.ts",
    "test:e2e:components": "playwright test e2e/05-components.spec.ts e2e/06-modals-and-dialogs.spec.ts",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "listeners:start": "bun scripts/start-listeners.ts",
    "eliza:start": "./scripts/start-eliza-system.sh",
    "eliza:stop": "./scripts/stop-eliza-system.sh",
    "eliza:deploy": "cd contracts && bun run deploy:eliza",
    "eliza:test": "cd contracts && forge test -vvv",
    "worker:start": "node -e \"require('./src/services/quoteApprovalWorker').startQuoteApprovalWorker()\"",
    "sol:validator": "sh -c 'echo \"â›“ï¸  Starting Solana test validator (logs in solana.log)...\"; cd solana/otc-program && pkill -9 -f solana-test-validator 2>/dev/null || true; sleep 1; rm -rf test-ledger 2>/dev/null || true; solana-test-validator --reset --log > ../../solana.log 2>&1'",
    "sol:deploy": "sh -c 'cd solana/otc-program && test -f target/deploy/otc.so && echo \"âœ… Using pre-built Solana program\" && solana program deploy target/deploy/otc.so --url http://127.0.0.1:8899 --program-id target/deploy/otc-keypair.json --upgrade-authority target/deploy/otc-keypair.json && echo \"âœ… Deployed Solana program\" && solana airdrop 25 target/deploy/otc-keypair.json --url http://127.0.0.1:8899 2>/dev/null || true && solana airdrop 2 DScqtGwFoDTme2Rzdjpdb2w7CtuKc6Z8KF7hMhbx8ugQ --url http://127.0.0.1:8899 2>/dev/null || true'",
    "sol:dev": "concurrently --raw --success=first --kill-others \"bun run sol:validator\" \"sh -c 'sleep 8 && bun run sol:deploy && tail -f /dev/null'\"",
    "localnet:start": "./scripts/localnet-start.sh",
    "localnet:stop": "./scripts/localnet-stop.sh"
