  "scripts": {
    "postinstall": "cd solana/otc-program && bun install",
    "start": "next start -p 5004",
    "dev": "bun run dev:full",
    "dev:full": "sh -c './scripts/ensure-postgres.sh && bun run dev:cleanup && sleep 2 && concurrently --kill-others-on-fail --names \"rpc,sol,prices,next,seed\" \"bun run rpc:dev\" \"bun run sol:dev\" \"bun run prices:keep-fresh\" \"sh -c \\\"sleep 8 && next dev -p 5004\\\"\" \"sh -c \\\"sleep 20 && bun run seed && tail -f /dev/null\\\"\"'",
    "prices:keep-fresh": "sh -c 'sleep 15 && ./scripts/keep-prices-fresh.sh'",
    "rpc:dev": "sh -c 'bun run rpc:check && echo \"âœ… Using existing RPC at localhost:8545\" || (bun run rpc:start & sleep 3 && bun run rpc:deploy) && tail -f /dev/null'",
    "dev:cleanup": "sh -c 'echo \"ðŸ§¹ Cleaning up OTC Desk port 5004...\"; lsof -t -i:5004 | xargs kill -9 2>/dev/null || true; echo \"âœ… Cleanup complete\"'",
    "seed": "bun scripts/seed-tokens.ts",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "dev:with-db": "bun run predev && bun run db:push && bun run dev:full",
    "agent": "./start-agent.sh",
    "rpc:start": "./scripts/start-anvil.sh",
    "rpc:deploy": "cd contracts && bun run deploy:eliza",
    "rpc:check": "bun scripts/check-rpc.js",
    "db:check": "./scripts/check-postgres.sh",
    "db:ensure": "./scripts/ensure-postgres.sh",
    "predev": "./scripts/ensure-postgres.sh",
    "help:metamask": "./scripts/verify-metamask.sh",
    "build": "next build",
    "build:next-only": "next build",
    "tunnel": "./scripts/start-tunnel.sh",
    "tunnel:install": "./scripts/install-cloudflared.sh",
    "lint": "prettier --write ./src",
    "test": "vitest run tests/runtime-e2e.test.ts tests/full-stack-integration.test.ts tests/database-integration.test.ts",
    "test:integration": "vitest run tests/full-stack-integration.test.ts",
    "test:localnet": "vitest run tests/localnet-e2e.test.ts",
    "test:all": "vitest run tests/**/*.test.ts",
    "test:complete-flow": "./scripts/test-complete-flow.sh",
    "test:complete-flow:only": "vitest run tests/complete-flow-e2e.test.ts",
    "test:contracts": "cd contracts && forge test -vvv",
    "test:solana": "cd solana/otc-program && bun run test",
    "test:everything": "./scripts/test-everything.sh",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
