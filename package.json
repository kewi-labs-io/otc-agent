  "scripts": {
    "postinstall": "cd solana/otc-program && bun install",
    "dev": "bun run dev:full",
    "dev:full": "sh -c './scripts/ensure-postgres.sh && ./scripts/ensure-deployments.sh && bun run dev:cleanup && sleep 2 && concurrently --kill-others-on-fail --names \"rpc,sol,prices,next,seed\" \"bun run rpc:dev\" \"bun run sol:dev\" \"bun run prices:keep-fresh\" \"sh -c \\\"sleep 8 && next dev -p 5004\\\"\" \"sh -c \\\"sleep 20 && bun run seed && tail -f /dev/null\\\"\"'",
    "dev:prod": "sh -c './scripts/ensure-postgres.sh && bun run dev:cleanup && sleep 2 && concurrently --kill-others-on-fail --names \"prices,next\" \"bun run prices:keep-fresh\" \"next dev -p 5004\"'",
    "dev:cleanup": "sh -c 'echo \"Cleaning up OTC Desk port 5004...\"; lsof -t -i:5004 | xargs kill -9 2>/dev/null || true; echo \"Cleanup complete\"'",
    "start": "next start -p 5004",
    "build": "./scripts/ensure-deployments.sh && next build",
    "build:next-only": "next build",
    "seed": "bun scripts/seed-tokens.ts",
    "rpc:dev": "sh -c 'bun run rpc:check && echo \"Using existing RPC at localhost:8545\" || (bun run rpc:start & sleep 3 && bun run rpc:deploy) && tail -f /dev/null'",
    "rpc:start": "./scripts/start-anvil.sh",
    "rpc:deploy": "cd contracts && bun run deploy:eliza",
    "rpc:check": "bun scripts/check-rpc.js",
    "db:push": "drizzle-kit push --config=drizzle.config.ts",
    "db:check": "./scripts/check-postgres.sh",
    "db:ensure": "./scripts/ensure-postgres.sh",
    "sol:dev": "sh -c 'bun run sol:check-prod && echo \"Using production Solana, skipping validator\" || (concurrently --raw --success=first --kill-others \"bun run sol:validator\" \"sh -c \\\"sleep 8 && bun run sol:deploy && bun run sol:init && tail -f /dev/null\\\"\")'",
    "sol:check-prod": "node -e \"const fs=require('fs');const env=fs.readFileSync('.env.local','utf8');const isProd=env.includes('NEXT_PUBLIC_SOLANA_RPC=https://api.mainnet-beta.solana.com')||env.includes('NEXT_PUBLIC_SOLANA_RPC=https://api.mainnet-beta');process.exit(isProd?0:1);\"",
    "sol:validator": "sh -c 'echo \"Starting Solana test validator (logs in solana.log)...\"; cd solana/otc-program && pkill -9 -f solana-test-validator 2>/dev/null || true; sleep 1; rm -rf test-ledger 2>/dev/null || true; solana-test-validator --reset --log > ../../solana.log 2>&1'",
    "sol:deploy": "sh -c 'cd solana/otc-program && test -f target/deploy/otc.so && echo \"Using pre-built Solana program\" && solana program deploy target/deploy/otc.so --url http://127.0.0.1:8899 --program-id target/deploy/otc-keypair.json --upgrade-authority target/deploy/otc-keypair.json && echo \"Deployed Solana program\" && solana airdrop 25 target/deploy/otc-keypair.json --url http://127.0.0.1:8899 2>/dev/null || true && solana airdrop 2 DScqtGwFoDTme2Rzdjpdb2w7CtuKc6Z8KF7hMhbx8ugQ --url http://127.0.0.1:8899 2>/dev/null || true'",
    "sol:init": "cd solana/otc-program && ANCHOR_PROVIDER_URL=http://127.0.0.1:8899 ANCHOR_WALLET=./id.json bun scripts/quick-init.ts",
    "prices:keep-fresh": "sh -c 'sleep 15 && ./scripts/keep-prices-fresh.sh'",
    "test": "vitest run",
    "test:unit": "vitest run tests/runtime-e2e.test.ts tests/full-stack-integration.test.ts tests/database-integration.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:synpress": "playwright test --config=synpress.config.ts",
    "test:synpress:setup": "bunx synpress --force",
    "test:contracts": "cd contracts && forge test -vvv",
    "test:solana": "cd solana/otc-program && bun run test",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run && playwright test",
    "test:all": "./scripts/test-everything.sh",
    "lint": "prettier --check ./src",
    "format": "prettier --write ./src",
    "typecheck": "tsc --noEmit && tsc --noEmit --project solana/otc-program/tsconfig.json",
    "tunnel": "./scripts/start-tunnel.sh",
    "tunnel:install": "./scripts/install-cloudflared.sh",
    "agent": "./start-agent.sh",
    "worker:start": "node -e \"require('./src/services/quoteApprovalWorker').startQuoteApprovalWorker()\"",
    "listeners:start": "bun scripts/start-listeners.ts",
    "localnet:start": "./scripts/localnet-start.sh",
    "localnet:stop": "./scripts/localnet-stop.sh",
    "deploy:testnet:evm": "export $(grep -v '^#' .env.local | xargs) && cd contracts && forge script scripts/DeployOTCSepolia.s.sol:DeployOTCSepolia --rpc-url $BASE_SEPOLIA_RPC --broadcast --verify && cp deployments/testnet-evm.json ../src/config/deployments/testnet-evm.json",
    "deploy:mainnet:evm": "export $(grep -v '^#' .env.local | xargs) && cd contracts && forge script scripts/DeployOTCMainnet.s.sol:DeployOTCMainnet --rpc-url $BASE_RPC --broadcast --verify && cp deployments/mainnet-evm.json ../src/config/deployments/mainnet-evm.json",
    "deploy:testnet:solana": "cd solana/otc-program && ANCHOR_PROVIDER_URL=https://api.devnet.solana.com ANCHOR_WALLET=./id.json bun scripts/deploy-devnet.ts",
    "deploy:mainnet:solana": "cd solana/otc-program && ANCHOR_PROVIDER_URL=https://api.mainnet-beta.solana.com ANCHOR_WALLET=./id.json bun scripts/deploy-mainnet.ts"
  },
